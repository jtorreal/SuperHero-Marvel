<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:assets="http://schemas.android.com/tools"
    android:id="@+id/cvMain"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/marvel_red"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgBgCharacter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtTitleCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="15sp"
            android:ellipsize="end"
            android:layout_margin="7dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:text="HELLO"
            assets:typeface="normal"></TextView>


        <TextView
            android:id="@+id/txtDescriptionCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_margin="7dp"
            android:textColor="@color/white"
            android:text="Description"></TextView>


    </LinearLayout>


</androidx.cardview.widget.CardView>